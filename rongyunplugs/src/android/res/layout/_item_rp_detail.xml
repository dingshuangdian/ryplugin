<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/input_height"
    android:background="@color/white">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_header"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        app:viewAspectRatio="1"
        android:layout_marginLeft="@dimen/half_base_margin" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/half_base_margin1"
        android:layout_marginRight="@dimen/half_base_margin"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:text="1.00元"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_amount"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/half_base_margin1"
        android:layout_marginLeft="@dimen/half_base_margin"
        android:layout_toRightOf="@id/iv_header"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:text="刘洪林"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="@dimen/half_base_margin"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:layout_toRightOf="@id/iv_header"
        android:textColor="@color/color_aaaaaa"
        tools:text="11:31"/>





    <TextView
      android:visibility="invisible"
        android:id="@+id/tv_best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_name"
        android:layout_marginRight="@dimen/half_base_margin"
        android:layout_marginTop="3dp"
        android:drawableLeft="@drawable/crown"
        android:drawablePadding="2dp"
        android:textSize="12sp"
        android:text="手气最佳"
        android:textColor="@color/color_fed55a"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/half_base_margin"
        android:background="@color/background"/>


</RelativeLayout>
